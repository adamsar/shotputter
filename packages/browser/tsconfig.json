{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ]
    }
}
