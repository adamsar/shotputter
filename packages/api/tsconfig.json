{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "es2016",
            "dom"
        ]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}
